<MudPaper Outlined="true" Class="d-flex flex-column align-center justify-center pa-4 skill-card">
    <MudIcon Icon="@Icon" Size="Size.Large" />
    <MudText Typo="Typo.body1" Class="mt-2">@SkillName</MudText>
</MudPaper>

<style>
    .skill-card {
        transition: all 0.3s ease-in-out;
        border-color: var(--mud-palette-surface);
    }

    .skill-card:hover {
        transform: perspective(1000px) translateY(-5px) rotateX(5deg) rotateY(-5deg);
        border-color: var(--mud-palette-primary);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3), 0 0 12px var(--mud-palette-primary);
    }
</style>

@code {
    [Parameter]
    public string SkillName { get; set; } = "Skill";

    [Parameter]
    public string Icon { get; set; } = "fas fa-code";
}