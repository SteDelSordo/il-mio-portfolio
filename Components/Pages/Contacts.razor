<style>
    .wavy-button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .wavy-button-3d {
        position: relative;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 12px 22px;
        font-family: 'Exo 2', sans-serif;
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--mud-palette-primary);
        background-color: var(--mud-palette-surface);
        border: 2px solid var(--mud-palette-primary);
        border-radius: 12px;
        text-decoration: none;
        overflow: hidden;
        transition: all 0.15s ease-out;
        transform-style: preserve-3d;
        box-shadow: 0 4px 0 0 color-mix(in srgb, var(--mud-palette-primary) 70%, black);
        transform: translateY(-4px);
    }

    .wavy-button-3d i {
        font-size: 1.2rem;
    }

    .wavy-button-3d:hover {
        background-color: var(--mud-palette-primary);
        color: var(--mud-palette-background);
        transform: translateY(-6px) rotateX(5deg) rotateY(-2deg);
        box-shadow: 0 8px 0 0 color-mix(in srgb, var(--mud-palette-primary) 70%, black), 0 12px 20px rgba(0, 0, 0, 0.3);
    }

    .wavy-button-3d:active {
        transform: translateY(0);
        box-shadow: 0 0px 0 0 color-mix(in srgb, var(--mud-palette-primary) 70%, black);
    }

    .wavy-button-3d .wavy-text span {
        position: relative;
        display: inline-block;
        animation: wave 1s infinite;
        animation-play-state: paused;
        animation-delay: calc(0.07s * var(--i));
    }

    .wavy-button-3d:hover .wavy-text span {
        animation-play-state: running;
    }

    @@keyframes wave {

        0%,
        40%,
        100% {
            transform: translateY(0);
        }

        20% {
            transform: translateY(-5px);
        }
    }

    .pre-animate {
        opacity: 0;
    }

    .animate-fade-in-up {
        animation: fade-in-up-anim 0.7s ease-out forwards;
    }

    @@keyframes fade-in-up-anim {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

