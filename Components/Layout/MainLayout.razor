@inherits LayoutComponentBase
@rendermode InteractiveServer
@using MudBlazor.Services
@inject NavigationManager NavigationManager

<style>
    /* Su schermi piccoli (breakpoint sm e inferiori), centra il testo del titolo nell'AppBar */
    @@media (max-width: 959.95px) {
        .appbar-title-responsive {
            text-align: center;
            flex-grow: 1;
            /* Permette al titolo di occupare lo spazio disponibile per centrarsi correttamente */
        }
    }

    .navbar-title-animated {
        background: linear-gradient(-45deg, var(--mud-palette-primary), #00BFFF, #4DB6AC, var(--mud-palette-primary));
        background-size: 400% 400%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradient-animation-navbar 10s ease infinite;
        font-weight: 500;
    }

    @@keyframes gradient-animation-navbar {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .mud-theme-dark .navbar-title-animated {
        text-shadow: 0 0 2px var(--mud-palette-primary), 0 0 6px var(--mud-palette-primary);
    }
</style>

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@_myTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="flex: 1; display: flex; flex-direction: column;">
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-4 cursor-pointer appbar-title-responsive navbar-title-animated"
            @onclick='() => NavigationManager.NavigateTo("")'>Stefano Del Sordo</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@ToggleDarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Portfolio</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-4 pb-16" Style="flex: 1 0 auto;">
        @Body
    </MudMainContent>

    <MudAppBar Bottom="true" Fixed="false" Elevation="1">
        <MudText Typo="Typo.body2">© @DateTime.Now.Year.ToString() Stefano Del Sordo</MudText>
        <MudSpacer />
        <MudIconButton Href="https://www.linkedin.com/in/stefano-del-sordo-ab5a98254/" Target="_blank"
            Icon="fa-brands fa-linkedin" Color="Color.Inherit" />
        <MudIconButton Href="https://github.com/SteDelSordo" Target="_blank" Icon="fa-brands fa-github"
            Color="Color.Inherit" />
    </MudAppBar>
</MudLayout>

@code {
    private bool _drawerOpen = false;
    private bool _isDarkMode = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

    private MudTheme _myTheme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#26A69A",
            Background = "#0A0A0A",
            AppbarBackground = "#141414",
            AppbarText = "#EAEAEA",
            DrawerBackground = "#141414",
            Surface = "#1E1E1E",
            TextPrimary = "#EAEAEA",
            TextSecondary = "#A0A0A0",
            ActionDefault = "#BDBDBD"
        },
        PaletteLight = new PaletteLight()
        {
            Primary = "#26A69A",
            Background = "#F7F9FC",
            AppbarBackground = "#FFFFFF",
            AppbarText = "#616161",
            DrawerBackground = "#FFFFFF",
            Surface = "#FFFFFF",
            TextPrimary = "#212121",
            TextSecondary = "#616161"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Exo 2", "sans-serif" }
            },
            H2 = new H2Typography() { FontFamily = new[] { "Exo 2", "sans-serif" }, FontWeight = "500" },
            H4 = new H4Typography() { FontFamily = new[] { "Exo 2", "sans-serif" } },
            H5 = new H5Typography() { FontFamily = new[] { "Exo 2", "sans-serif" } }
        }
    };
}