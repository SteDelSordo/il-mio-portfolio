@inherits LayoutComponentBase
@using MudBlazor.Services;
@rendermode InteractiveServer

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@_myTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-4"
            Style="@($"color: {_myTheme.PaletteDark.Primary}; text-shadow: 0 0 2px {_myTheme.PaletteDark.Primary}, 0 0 6px {_myTheme.PaletteDark.Primary};")">
            Stefano Del Sordo</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@ToggleDarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Portfolio</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;
    private bool _isDarkMode = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

    private MudTheme _myTheme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#39FF14", // Verde acido, unico accento di colore
            Background = "#0A0A0A", // Un nero ancora più profondo
            AppbarBackground = "#141414", // Barre leggermente più chiare
            DrawerBackground = "#141414",
            Surface = "#1E1E1E", // Superfici come le card
            TextPrimary = "#EAEAEA",
            TextSecondary = "#A0A0A0",
            ActionDefault = "#BDBDBD"
        },
        // Definizione del tema per la modalità "giorno"
        PaletteLight = new PaletteLight()
        {
            Primary = Colors.Green.Darken3,
            Background = "#FAFAFA",
            AppbarBackground = Colors.Green.Darken3,
            DrawerBackground = "#FFFFFF",
            Surface = "#FFFFFF",
            TextPrimary = "#424242",
            TextSecondary = "#757575"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Exo 2", "sans-serif" }
            },
            H2 = new H2Typography() { FontFamily = new[] { "Exo 2", "sans-serif" }, FontWeight = "500" },
            H4 = new H4Typography() { FontFamily = new[] { "Exo 2", "sans-serif" } },
            H5 = new H5Typography() { FontFamily = new[] { "Exo 2", "sans-serif" } }
        }
    };
}